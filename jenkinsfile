pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "ibkwilly/myapp"
        DOCKER_TAG = "latest"
    }

    stages {
        // Checkout code from SCM
        stage('Checkout Code') {
            steps {
                git(
                    url: 'https://github.com/IbkWilliams1/jenkins-deployment-assignment.git',
                    credentialsId: 'ibkwilly-dockerhub',
                    branch: 'main'
                )
            }
        }

        // Build Docker image
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }

        // Push to Docker Hub
        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'ibkwilly-dockerhub') {
                        docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").push()
                    }
                }
            }
        }

        // Deployment stage (example - customize as needed)
        stage('Deploy') {
            steps {
                script {
                    // Add your deployment commands here
                    // Example: kubectl apply -f deployment.yaml
                    echo "Deploying ${DOCKER_IMAGE}:${DOCKER_TAG}..."
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'Build and deployment succeeded! ✅'
        }
        failure {
            echo 'Build or deployment failed! ❌'
            // Add notification steps (email, Slack, etc.)
        }
    }
}