pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/IbkWilliams1/jenkins-deployment-assignment.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Build step (if needed)'
            }
        }

        stage('Deploy') {
            steps {
                sh 'cp index.html /var/www/html/'
            }
        }

        stage('Verification') {
            steps {
                sh 'curl -I http://localhost/index.html'
            }
        }
    }
}