pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git(
                    branch: 'main',
                    url: 'https://github.com/IbkWilliams1/jenkins-deployment-assignment.git'
                )
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t myapp .'
                }
            }
        }
        stage('Push to Docker Hub') {
            steps {
                script {
                    sh 'echo docker login -u ibkwilly' 
                    sh 'docker tag ibkwilly ibkwilly/myapp'
                    sh 'docker push ibkwilly/myapp'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh '''
                    docker stop my-web-app || true
                    docker rm my-web-app || true
                    docker run -d -p 8081:8081 --name my-web-app myapp
                    '''
                }
            }
        }
    }

    post {
        always {
            sh 'docker system prune -af'
        }
        success {
            echo 'Build successful!'
        }
    }
}
